<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <LinearLayout
        android:id="@+id/input_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
            android:hint="账号"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="10dp"
            android:textColorHighlight="?attr/colorPrimary"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@drawable/my_cursor_color" />

         <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="#e1e1e1"/>

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="15"
            android:maxLines="1"
            android:padding="10dp"
            android:textColorHighlight="?attr/colorPrimary"
            android:textColorHint="@android:color/darker_gray"
            android:textCursorDrawable="@drawable/my_cursor_color" />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/input_area"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/round_rect_drawable"
        android:text="登录"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@id/login_btn">

        <TextView
            android:id="@+id/forget_password_tbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:focusable="true"
            android:textColor="@drawable/drawable_text_select"
            android:text="忘记密码？"
            />
        <TextView
            android:id="@+id/register_tbx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColor="@drawable/drawable_text_select"
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:text="立即注册"
            />
    </LinearLayout>

</RelativeLayout>